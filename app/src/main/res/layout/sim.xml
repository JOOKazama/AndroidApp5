<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/return1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_return"
            tools:ignore="MissingConstraints"
            android:onClick="Return_Main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"/>

    <TextView
            android:layout_width="294dp"
            android:layout_height="36dp"
            android:id="@+id/result"
            tools:ignore="MissingConstraints"
            android:text="@string/result"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="224dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="103dp"
            app:layout_constraintTop_toBottomOf="@+id/button_check"/>

    <Button
            android:text="@string/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_check"
            android:onClick="Check"
            tools:ignore="MissingConstraints,OnClick"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:layout_constraintStart_toEndOf="@+id/button_return"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="118dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"/>

    <TextView
            android:text="@string/first_task"
            android:layout_width="294dp"
            android:layout_height="36dp"
            android:id="@+id/first_task"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"/>

    <TextView
            android:text="@string/second_task"
            android:layout_width="294dp"
            android:layout_height="36dp"
            android:id="@+id/second_task"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/first_task"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="294dp"
            android:layout_height="96dp"
            android:id="@+id/progress_bar"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/second_task"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_return"/>

</androidx.constraintlayout.widget.ConstraintLayout>